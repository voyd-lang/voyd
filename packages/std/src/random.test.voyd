fn random_i32_from_seed(seed: i64) -> i32
  try
    random_i32()
  Random::fill_bytes(tail, _len):
    tail(msgpack::make_null())
  Random::next_i64(tail):
    tail(seed)
  Random::next_u64(tail):
    tail(i64_from_i32(0))

fn random_i32_from_seed_with_range({ seed: i64, range: Range<i32> }) -> i32
  try
    random_i32(range)
  Random::fill_bytes(tail, _len):
    tail(msgpack::make_null())
  Random::next_i64(tail):
    tail(seed)
  Random::next_u64(tail):
    tail(i64_from_i32(0))

