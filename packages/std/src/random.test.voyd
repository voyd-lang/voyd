test "random_i32 handles spans larger than i32":
  let value = random_i32_from_seed_with_range({
    seed: i64_from_i32(2147483647),
    range: Range<i32> {
      start: Some<i32> { value: -1 },
      end: Some<i32> { value: 2147483647 },
      include_end: false
    }
  })

  assert(value, eq: 2147483646)

