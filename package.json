{
  "name": "voyd-monorepo",
  "version": "0.9.0",
  "private": true,
  "description": "Voyd monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "packageManager": "npm@11.4.2",
  "scripts": {
    "build": "turbo run build --affected",
    "test": "turbo run test --affected --output-logs=errors-only --concurrency=4",
    "typecheck": "turbo run typecheck --affected",
    "lint": "turbo run lint --affected --parallel",
    "dev": "turbo run dev --affected --parallel",
    "clean": "turbo run clean --affected --parallel"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^7.10.0",
    "tsx": "^4.20.4",
    "turbo": "^2.2.3",
    "typescript": "^5.6.2",
    "vite": "^7.1.4",
    "vite-node": "^3.2.4",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "4.46.2",
    "@rollup/rollup-linux-x64-gnu": "4.46.2",
    "@tailwindcss/oxide-darwin-arm64": "4.1.18",
    "@tailwindcss/oxide-linux-x64-gnu": "4.1.18"
  }
}
