use macros::all

// Linear memory helpers built on Binaryen

pub fn grow(pages: i32) -> i32
  binaryen
    func: grow
    namespace: memory
    args: `(pages)

pub fn size() -> i32
  binaryen
    func: size
    namespace: memory
    args: `()

pub fn load_i32(ptr: i32) -> i32
  binaryen
    func: load
    namespace: i32
    args: `(0, 0, ptr)

pub fn store_i32(ptr: i32, value: i32) -> i32
  binaryen
    func: store
    namespace: i32
    args: `(0, 0, ptr, value)
  value
