{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@voyd/lib/*": ["packages/lib/src/lib/*"],
      "@voyd/compiler/*": ["packages/compiler/src/*"],
      "@voyd/browser-compiler/*": ["packages/browser-compiler/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"]
  }
}
